<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: resource.data.title %>
  </head>
  <body class="antialiased bg-white text-gray-800 flex flex-col min-h-screen <%= resource.data.page_class %> <%= resource.data.layout %>">
    <%= render "header", site: site %>
    <!-- Main -->
    <main class=" max-w-7xl mx-auto flex-grow">
      <%= yield %>
    </main>
    <%= render "footer", site: site %>
  </body>
</html>
