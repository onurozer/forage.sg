<div class="recipe-details sm:flex sm:content-start sm:max-w-5xl sm:mx-auto not-prose bg-gradient-to-t from-gray-100 to-gray-50 rounded-xl shadow-sm p-6 sm:p-9">
  <div class="ingredients sm:pr-6 sm:mr-6 mb-12 sm:w-1/3">
    <h2 class="text-2xl font-bold mb-6">Ingredients</h2>
    <ul class="pl-0 flex flex-col space-y-4">
      <% data.ingredients.each do |ingredient|%>
        <li class="list-none pl-0"> <%= ingredient %></li>
      <% end%>
    </ul>
  </div>
  <div class="instructions pb-6 sm:w-2/3">
    <h2 class="text-2xl font-bold mb-6">Instructions</h2>
    <ol class="list-none pl-0 flex flex-col space-y-6">
      <% data.instructions.each do |instruction|%>
        <li class="pl-0"> <%= instruction %></li>
      <% end%>
    </ol>
  </div>
</div>
